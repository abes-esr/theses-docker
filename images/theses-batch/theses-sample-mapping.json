{
  "settings": {
    "analysis": {
        "filter": {
          "french_stop": {
            "type": "stop",
            "stopwords": "_french_"
          },
          "french_stemmer": {
            "type": "stemmer",
            "language": "light_french"
          }
        },
        "analyzer": {
          "francais": {
            "type": "custom",
            "tokenizer": "standard",
            "filter": [
              "lowercase",
              "french_stop",
              "french_stemmer"
            ]
          }
        }
      }
    },
  "mappings": {
    "properties": {
      "nnt": {
        "type": "keyword"
      },
      "titre": {
        "type": "text",
        "analyzer": "francais"
        ,
        "fields": {
          "exact": {
            "type": "text",
            "analyzer": "standard"
          }
        }
      },
      "dateSoutenance": {
        "type": "date"
      },
      "abstractFR": {
        "type": "text"
      },
      "abstractEN": {
        "type": "text"
      },
      "rameau": {
        "type": "keyword",
        "fields": {
          "suggestion": {
            "type": "completion",
            "analyzer": "standard"
          }
        }
      }
    }
  }
}
